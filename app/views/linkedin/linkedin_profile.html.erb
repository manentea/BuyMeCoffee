<div class="row">
  <div class="span4">
    <div class="thumbnail">
      <img src="<%= current_user.basic_profile.picture_url %>" style="float: left;margin: 5px;">
      <h3><%= current_user.basic_profile.formatted_name %></h3>
      <h4><%= current_user.basic_profile.headline %></h4>
      <br>
      <p><%= current_user.basic_profile.summary %></p>
    </div>
  </div>
  <div class="span4">
    <div class="well">
      <h5>Interests</h5>

      <br>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 16px;">
  <div class="span10">
  <h1>Positions</h1>
    <table class="table table-striped">
      <tr>
        <th>Title</th>
        <th>Summary</th>
        <th>Company Name</th>
        <th>Is Current</th>
        <th>Start Date</th>
        <th>End Date</th>
      </tr>
      <% current_user.basic_profile.positions.each do |p| %>
       <tr>
         <th><%= p.title %></th>
         <th><%= p.summary %></th>
         <th><%= p.company %></th>
         <th><%= p.is_current %></th>
         <th><%= p.start_date %></th>
         <th><%= p.end_date %></th>
           </tr>
      <% end %>
  </table>
  </div>
</div>


</div>
